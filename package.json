{
  "name": "metalsmith-posthtml",
  "version": "1.0.0-alpha2",
  "description": "PostHTML for Metalsmith",
  "main": "index.js",
  "engines": {
    "npm": ">=3",
    "node": ">=6"
  },
  "scripts": {
    "clean": "echo '=> Cleaning' && sudo rm -rf .nyc_output coverage test/node_modules",
    "pretest": "echo '=> Linting' && standard",
    "test": "echo '=> Testing' && npm run clean && nyc ava './test/index.js'",
    "start": "echo '=> Executing' && node index"
  },
  "ava": {
    "babel": "inherit"
  },
  "nyc": {
    "all": true,
    "require": "babel-register",
    "include": [
      "lib",
      "test"
    ],
    "extension": [
      ".js"
    ]
  },
  "standard": {
    "ignore": []
  },
  "posthtml": {
    "sync": false,
    "plugins": {
      "posthtml-bem": {
        "elemPrefix": "__",
        "modPrefix": "--",
        "modDlmtr": "-"
      }
    }
  },
  "babel": {
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    },
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "posthtml": "^0.9.0",
    "posthtml-load-config": "^1.0.0-alpha2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "coveralls": "^2.11.12",
    "metalsmith": "^2.1.0",
    "nyc": "^7.1.0",
    "posthtml-bem": "^0.2.2",
    "standard": "^7.1.2"
  },
  "author": {
    "name": "Michael Ciniawsky",
    "email": "<michael.ciniawsky@gmail.com>"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/posthtml/metalsmith-posthtml.git"
  },
  "bugs": {
    "url": "https://github.com/posthtml/metalsmith-posthtml/issues"
  },
  "homepage": "https://github.com/posthtml/metalsmith-posthtml#readme",
  "license": "MIT"
}
